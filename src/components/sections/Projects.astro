---
import { GitHub as GitHubIcon } from '@/icons/index';
import { projects } from '@cv';
import Section from '@/components/Section.astro';
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ url, description, highlights, name, github }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  {url ? (
                    <a
                      href={url}
                      target="_blank"
                      title={`Ver el proyecto ${name}`}
                    >
                      {name}
                    </a>
                  ) : (
                    name
                  )}

                  <span>&bull;</span>

                  {github && (
                    <a
                      href={github}
                      target="_blank"
                      title={`Ver cÃ³digo fuente del proyecto ${name}`}
                    >
                      <GitHubIcon
                        class="github-code-link"
                        width="16"
                        height="16"
                      />
                    </a>
                  )}
                </h3>
                <p>{description}</p>
              </header>

              <footer>
                {highlights.map((highlight) => {
                  return <span>{highlight}</span>;
                })}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    font-weight: 600;
    margin-bottom: 4px;
    text-wrap: pretty;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  article h3 span {
    color: #c752fe;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background-color: #eee;
    color: black;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  .github-code-link {
    color: #777;
    margin-left: 4px;
    transition: all 0.3s ease;
  }

  .github-code-link:hover {
    color: #444;
  }
</style>
